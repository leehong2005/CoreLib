<resources>

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="title_bar_title">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#333333</item>
    </style>
    
    <style name="menu_anim_style">
        <item name="android:windowEnterAnimation">@anim/sdk_menu_open</item>
        <item name="android:windowExitAnimation">@anim/sdk_menu_close</item>
    </style>

    <style name="NoTitleDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="checkbox_style">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">64dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:button">@drawable/sdk_checkbox_state</item>
    </style>
    
    <style name="new_tip_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/sdk_new_bg</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12dip</item>
        <item name="android:scaleType">center</item>
        <item name="android:shadowDx">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:shadowColor">#B41900</item>
        <item name="android:text">@string/tips_new</item>
        <item name="android:singleLine">true</item>
        <item name="android:textIsSelectable">false</item>
    </style>

        <style name="new_tip_img_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:scaleType">center</item>
        <item name="android:shadowDx">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:shadowColor">#B41900</item>
    </style>
</resources>